package com.ispan.ktv.bean;

import java.util.Date;

import jakarta.persistence.Column;
import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
import jakarta.persistence.JoinColumn;
import jakarta.persistence.ManyToOne;
import jakarta.persistence.PrePersist;
import jakarta.persistence.Table;
import lombok.AllArgsConstructor;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;
import lombok.ToString;

@Getter
@Setter
@NoArgsConstructor
@AllArgsConstructor
@ToString
@Entity
@Table(name = "problems")
public class Problems {
	
	@Id
	@GeneratedValue(strategy = GenerationType.IDENTITY)
	@Column(name = "problemId")
	private Integer problemId;

	@Column(name = "eventCase")
	private String eventCase;
	
	//此多方 與 Rooms 的 roomId 欄位
	@ManyToOne
	@JoinColumn(name = "room" , referencedColumnName = "roomId")
	private Rooms room;
//	private Integer room;
		
	@Column(name = "content" , columnDefinition = "nvarchar(255)")
	private String content;
	
	@Column(name = "eventDate" , columnDefinition = "time")
	private Date eventDate;
	
	@Column(name = "closeDate" , columnDefinition = "time")
	private Date closeDate;
	
	@Column(name = "status")
	private String status;
	
	@Column(name = "createTime" , columnDefinition = "time")
	private Date createTime;
	
	//此多方 與 Staff 的 AccountId 欄位
	@ManyToOne
    @JoinColumn(name = "createBy", referencedColumnName = "accountId")
    private Staff createBy;
//	private String createBy;
	
	@Column(name = "updateTime" , columnDefinition = "time")
	private Date updateTime;
	
	@Column(name = "updateBy")
	private String updateBy;
	
	@PrePersist
	public void onCreate() {
		if (createTime == null) {
			createTime = new Date();
		}
	}
	
}
